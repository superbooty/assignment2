
<section class="product-header">
    <section class="product-name">
        {{#if name}}
            <p class="product-name">{{name}}</p>
        {{/if}}
        <img src="/img/close-panel.png" alt="close" />
        <div class="clear"></div>
    </section>
    <section class="product-rating-container">
        <div class="product-rating" >
            <span class="gray">
                <span class="gold" style="width:{{crr crr}}">
                </span>
            </span>
        </div>
        <span class="product-review-links" id="review-links">&nbsp;&nbsp;109 Reviews  |  <a href="#">Write a Review</a>  | <a href="#">Ask a Question</a></span>
        <div class="clear"></div>
    </section>
    <section class="product-price-container">
        <section class="product-price">
            <span>${{price}}</span>
        </section>
    </section>
</section>